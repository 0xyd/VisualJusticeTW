$font_normal = "Lato", cwTexHei, Helvetica, STHeiti, "Microsoft JhengHei", "微軟正黑體", PMingLiU, "Lucida Grande", Arial, sans-serif
$head_2_size = 2em 

$font_size_desktop = 14px
$font_size_mobile  = 28px

$line-height-desktop = 1.42857143
$line-height-mobile  = 2

$button_color = #0d5287
$button_color_hover = #0585e8

$screen-lg = 1200px		// Large devices (large desktops)
$screen-md = 992px		// Medium devices (desktops)
$screen-sm = 768px		// Small devices (tablets, under this size called extreme small, i.e., phones)
$screen-md-max = $screen-lg - 1
$screen-sm-max = $screen-md - 1
$screen-xs-max = $screen-sm - 1

// $rainbow_ribbon_height = 50px
$circle_border_radius = 50%

add(a, b)
	a + b

// a: Sum of padding top and bottom. b: line-height
calBorderWidth(a, b)
	(a + b) / 2

body
	font-family: $font_normal
	@media all and (min-width: $screen-xs-max)
		font-size: $font_size_mobile
	@media all and (min-width: $screen-lg)
		font-size: $font_size_desktop
